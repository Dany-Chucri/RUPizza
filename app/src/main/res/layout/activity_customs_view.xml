<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/customPizzaImage"
        android:layout_width="260dp"
        android:layout_height="185dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/custompizza" />

    <Spinner
        android:id="@+id/sizeChooser"
        android:layout_width="171dp"
        android:layout_height="50dp"
        android:layout_below="@id/customPizzaImage"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:prompt="@string/select_size_prompt" />

    <ListView
        android:id="@+id/additionalToppings"
        android:layout_width="171dp"
        android:layout_height="163dp"
        android:layout_below="@id/sizeChooser"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:focusable="true" />

    <TextView
        android:id="@+id/additionalToppingsLabel"
        android:layout_width="135dp"
        android:layout_height="27dp"
        android:layout_below="@id/additionalToppings"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="Additional Toppings"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/priceLabel"
        android:layout_width="46dp"
        android:layout_height="20dp"
        android:layout_below="@id/additionalToppingsLabel"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="Price"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/totalPrice"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_below="@id/additionalToppingsLabel"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/priceLabel"
        android:editable="false" />

    <Button
        android:id="@+id/addToOrder"
        android:layout_width="171dp"
        android:layout_height="25dp"
        android:layout_below="@id/totalPrice"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="Add To Order" />

    <RadioButton
        android:id="@+id/tomatoSauce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/totalPrice"
        android:layout_marginStart="299dp"
        android:layout_marginTop="98dp"
        android:checked="true"
        android:text="Tomato Sauce" />

    <RadioButton
        android:id="@+id/alfredoSauce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/totalPrice"
        android:layout_marginStart="299dp"
        android:layout_marginTop="125dp"
        android:text="Alfredo Sauce" />

    <CheckBox
        android:id="@+id/extraSauce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/totalPrice"
        android:layout_marginStart="299dp"
        android:layout_marginTop="150dp"
        android:text="Extra Sauce" />

    <CheckBox
        android:id="@+id/extraCheese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/totalPrice"
        android:layout_marginStart="299dp"
        android:layout_marginTop="175dp"
        android:text="Extra Cheese" />

    <ListView
        android:id="@+id/selectedToppings"
        android:layout_width="171dp"
        android:layout_height="163dp"
        android:layout_below="@id/extraCheese"
        android:layout_marginStart="329dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:focusable="true" />

    <TextView
        android:id="@+id/selectedToppingsLabel"
        android:layout_width="135dp"
        android:layout_height="27dp"
        android:layout_below="@id/selectedToppings"
        android:layout_marginStart="299dp"
        android:layout_marginTop="20dp"
        android:text="Selected Toppings"
        android:textSize="14sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/addTopping"
        android:layout_width="76dp"
        android:layout_height="25dp"
        android:layout_below="@id/selectedToppings"
        android:layout_marginStart="212dp"
        android:layout_marginTop="20dp"
        android:onClick="selectTopping"
        android:text="Add Topping" />

    <Button
        android:id="@+id/removeTopping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectedToppings"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/addTopping"
        android:onClick="deselectTopping"
        android:text="Remove Topping" />

</RelativeLayout>
